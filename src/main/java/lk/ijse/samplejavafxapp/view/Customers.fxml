<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.samplejavafxapp.controller.CustomerController">
   <FlowPane prefHeight="400.0" prefWidth="600.0">
      <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="27.0" prefWidth="600.0" text="Customer Management" textAlignment="CENTER" wrapText="true">
         <font>
            <Font name="System Italic" size="24.0" />
         </font>
         <FlowPane.margin>
            <Insets bottom="40.0" top="35.0" />
         </FlowPane.margin>
      </Label>
      <Label layoutX="50.0" layoutY="114.0" prefWidth="150.0" text="Customer ID">
         <font>
            <Font size="14.0" />
         </font>
         <FlowPane.margin>
            <Insets bottom="20.0" left="40.0" right="50.0" />
         </FlowPane.margin>
      </Label>
      <TextField fx:id="txtCustomerID" layoutX="10.0" layoutY="151.0" prefHeight="25.0" prefWidth="300.0" promptText="123">
         <FlowPane.margin>
            <Insets bottom="20.0" right="60.0" />
         </FlowPane.margin>
      </TextField>
      <Label prefWidth="150.0" text="Customer Name">
         <FlowPane.margin>
            <Insets bottom="20.0" left="40.0" right="50.0" />
         </FlowPane.margin>
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <TextField fx:id="txtCustomerName" prefHeight="25.0" prefWidth="300.0" promptText="Nimal Perera">
         <FlowPane.margin>
            <Insets bottom="20.0" right="60.0" />
         </FlowPane.margin>
      </TextField>
      <Label prefWidth="150.0" text="Customer Contact No">
         <FlowPane.margin>
            <Insets bottom="20.0" left="40.0" right="50.0" />
         </FlowPane.margin>
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <TextField fx:id="txtCustomerPhone" prefHeight="25.0" prefWidth="300.0" promptText="077-1234567">
         <FlowPane.margin>
            <Insets bottom="20.0" right="60.0" />
         </FlowPane.margin>
      </TextField>
      <Label layoutX="50.0" layoutY="204.0" prefWidth="150.0" text="Customer Email">
         <font>
            <Font size="14.0" />
         </font>
         <FlowPane.margin>
            <Insets bottom="20.0" left="40.0" right="50.0" />
         </FlowPane.margin>
      </Label>
      <TextField fx:id="txtCustomerEmail" layoutX="250.0" layoutY="201.0" prefHeight="25.0" prefWidth="300.0" promptText="abc@example.com">
         <FlowPane.margin>
            <Insets bottom="20.0" right="60.0" />
         </FlowPane.margin>
      </TextField>
      <Button fx:id="btnAddCustomer" mnemonicParsing="false" onAction="#onClickBtnAddCustomer" prefHeight="25.0" prefWidth="200.0" text="Add Customer" textFill="#00801c">
         <font>
            <Font size="15.0" />
         </font>
         <FlowPane.margin>
            <Insets left="200.0" top="25.0" />
         </FlowPane.margin>
      </Button>
   </FlowPane>
</AnchorPane>
