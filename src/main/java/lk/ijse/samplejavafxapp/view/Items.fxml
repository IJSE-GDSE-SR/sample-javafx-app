<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1">
   <FlowPane prefHeight="420.0" prefWidth="600.0">
      <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="27.0" prefWidth="600.0" text="Item Management" textAlignment="CENTER" wrapText="true">
         <font>
            <Font name="System Italic" size="24.0" />
         </font>
         <FlowPane.margin>
            <Insets bottom="40.0" top="35.0" />
         </FlowPane.margin>
      </Label>
      <Label layoutX="50.0" layoutY="114.0" prefWidth="150.0" text="Item ID">
         <font>
            <Font size="14.0" />
         </font>
         <FlowPane.margin>
            <Insets bottom="15.0" left="40.0" right="50.0" />
         </FlowPane.margin>
      </Label>
      <TextField fx:id="txtItemID" layoutX="10.0" layoutY="151.0" prefHeight="25.0" prefWidth="150.0">
         <FlowPane.margin>
            <Insets bottom="15.0" right="60.0" />
         </FlowPane.margin>
      </TextField>
      <Label prefWidth="150.0" text="Item Name">
         <FlowPane.margin>
            <Insets bottom="15.0" left="40.0" right="50.0" />
         </FlowPane.margin>
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <TextField fx:id="txtItemName" prefHeight="25.0" prefWidth="300.0">
         <FlowPane.margin>
            <Insets bottom="15.0" right="60.0" />
         </FlowPane.margin>
      </TextField>
      <Label prefWidth="150.0" text="Item Buying Price">
         <FlowPane.margin>
            <Insets bottom="15.0" left="40.0" right="50.0" />
         </FlowPane.margin>
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <TextField fx:id="txtItemBuyingPrice" prefHeight="25.0" prefWidth="150.0">
         <FlowPane.margin>
            <Insets bottom="15.0" right="60.0" />
         </FlowPane.margin>
      </TextField>
      <Label layoutX="50.0" layoutY="258.0" prefWidth="150.0" text="Item Selling Price">
         <font>
            <Font size="14.0" />
         </font>
         <FlowPane.margin>
            <Insets bottom="15.0" left="40.0" right="50.0" />
         </FlowPane.margin>
      </Label>
      <TextField fx:id="txtItemSellingPrice" layoutX="250.0" layoutY="255.0" prefHeight="25.0" prefWidth="150.0">
         <FlowPane.margin>
            <Insets bottom="15.0" right="60.0" />
         </FlowPane.margin></TextField>
      <Label layoutX="50.0" layoutY="204.0" prefWidth="150.0" text="Item Quantity">
         <font>
            <Font size="14.0" />
         </font>
         <FlowPane.margin>
            <Insets bottom="15.0" left="40.0" right="50.0" />
         </FlowPane.margin>
      </Label>
      <TextField fx:id="txtItemQuantity" layoutX="250.0" layoutY="201.0" prefHeight="25.0" prefWidth="150.0">
         <FlowPane.margin>
            <Insets bottom="15.0" right="60.0" />
         </FlowPane.margin>
      </TextField>
      <Button fx:id="btnAddItem" mnemonicParsing="false" prefHeight="25.0" prefWidth="200.0" text="Add Item" textFill="#00801c">
         <font>
            <Font size="15.0" />
         </font>
         <FlowPane.margin>
            <Insets left="200.0" top="25.0" />
         </FlowPane.margin>
      </Button>
   </FlowPane>
</AnchorPane>
